<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.ClientView"
             xmlns:vm="clr-namespace:MauiBankingExercise.ViewModels"
             xmlns:models="clr-namespace:MauiBankingExercise.Models"
             Title="Client Dashboard"
             x:DataType="vm:ClientViewModel">

    <ContentPage.BindingContext>
        <vm:ClientViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="#004C3F">

            <Label Text="{Binding CustomerName}" FontSize="28" TextColor="White" FontAttributes="Bold" />

            <Label Text="Accounts" FontSize="20" TextColor="White" />

            <CollectionView ItemsSource="{Binding Accounts}" SelectionMode="Single" SelectedItem="{Binding SelectedAccount}" SelectionChangedCommand="{Binding SelectAccountCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Account">
                        <Border Stroke="White"  StrokeThickness="1" BackgroundColor="#007A33" StrokeShape="RoundRectangle 10" Margin="5" Padding="10">
                            <Grid Padding="10" ColumnSpacing="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label  Grid.Row="0"   Text="{Binding AccountNumber}" TextColor="White" FontSize="18"/>
                                <Label Grid.Row="1" Text="{Binding AccountBalance, StringFormat='Balance: {0:C}'}" TextColor="White"/>
                                <Label Grid.Row="2" Text="{Binding AccountType.Name}" TextColor="LightGray"/>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <Button Text="Transact" Command="{Binding SelectAccountCommand}"/>
            

            <Label Text="Recent Transactions" FontSize="20" TextColor="White"/>
            <CollectionView ItemsSource="{Binding RecentTransactions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Transaction">
                        <Border Stroke="White" StrokeThickness="1" BackgroundColor="#006B3F" StrokeShape="RoundRectangle 8" Margin="5" Padding="8">
                            <HorizontalStackLayout>
                                <Label Text="{Binding TransactionDate, StringFormat='{0:MM/dd/yyyy}'}" TextColor="White" WidthRequest="100"/>
                                <Label Text="{Binding TransactionType.Name}" TextColor="White" WidthRequest="120"/>
                                <Label Text="{Binding Amount, StringFormat='{0:C}'}" TextColor="LightYellow" />
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
